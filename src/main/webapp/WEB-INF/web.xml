<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<!-- Note 原来使用的是2.5的配置项，但是不兼容GWT插件的jetty服务器所以改成2.4 -->
	<!-- begin Name:wuqiwei Data:2013-319 Email:1058633117@qq.com AddReason: 
		主页面使用index.do的请求实现MVC的效果 -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<!-- end Name:wuqiwei Data:2013-319 Email:1058633117@qq.com AddReason: 主页面使用index.do的请求实现MVC的效果 -->

	<!--Begin 这是Spring中的一个编码过滤器 设置每次请求的request请求解码的类型为UTF-8 -->
	<filter>
		<filter-name>charsetEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!--End 这是Spring中的一个编码过滤器 设置每次请求的request请求解码的类型为UTF-8 -->

	<!--begin: 这个过滤器是用在一个页面请求时，打来Session，生成完页面生关闭Session，这样就可以解决lazy -->
	<filter>
		<filter-name>hibernateFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
		<init-param>
			<param-name>sessionFactoryBeanName</param-name>
			<param-value>sessionFactory</param-value>
		</init-param>
		<init-param>
			<param-name>singleSession</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>flushMode</param-name>
			<param-value>AUTO</param-value>
		</init-param>
	</filter>
	<!--end: 这个过滤器是用在一个页面请求时，打来Session，生成完页面生关闭Session，这样就可以解决lazy -->



	<!-- 经测试filter的执行过程是按照filter-mapping的顺序决定的 ,比如说来了一个.html的请求 -->
	<!-- 会先被SessionUserCheckUpdate拦截,之后才会被UrlRewriteFilter拦截UrlRewriteFilter被拦截到请求 -->
	<!-- 是不会传递到下一个filter的，这是UrlRewriteFilter重写URL导致的 -->
	<filter-mapping>
		<filter-name>charsetEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Begin Name:wuqiwei Date:2013-10-4 08:39:02 AddReason:访问一个页面直到页面完全打开之后session才关闭,解决懒加载问题 -->
	<filter-mapping>
		<filter-name>hibernateFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Begin Name:wuqiwei Date:2013-10-4 08:39:02 AddReason:访问一个页面直到页面完全打开之后session才关闭,解决懒加载问题 -->

	<!-- Begin Name:wuqiwei Date:2013-10-2 AddReason:在url重写之前缓存页面,避免Encached不缓存浏览器的链接地址 -->
	<!-- <filter-mapping> <filter-name>indexPageCacheFilter</filter-name> <url-pattern>/index.html</url-pattern> 
		</filter-mapping> -->
	<!-- End Name:wuqiwei Date:2013-10-2 AddReason:在url重写之前缓存页面,避免Encached不缓存浏览器的链接地址 -->

	<!-- begin:spring 配置 tomcat启动实例化 spring配置文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- End:spring 配置 tomcat启动实例化 spring配置文件 -->


	<!-- 配置session的过期时间为30分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<!--Begin Name:wuqiwei Date:2013-08-10 AddReason:添加springMVC的支持 -->
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>*.jhtml</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!--end Name:wuqiwei Date:2013-08-10 AddReason:添加springMVC的支持 -->
</web-app>