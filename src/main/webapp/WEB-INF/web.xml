<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<!-- Note 原来使用的是2.5的配置项，但是不兼容GWT插件的jetty服务器所以改成2.4 -->
	<!-- begin Name:wuqiwei Data:2013-319 Email:1058633117@qq.com AddReason: 
		主页面使用index.do的请求实现MVC的效果 -->
	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
	<!-- end Name:wuqiwei Data:2013-319 Email:1058633117@qq.com AddReason: 主页面使用index.do的请求实现MVC的效果 -->

	<!--Begin Name:wuqiwei Date:2013-10-3 23:06:02 AddReason:使用shiro安全框架 -->
	<filter>
		<filter-name>shiroFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetFilterLifecycle</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<!--Begin Name:wuqiwei Date:2013-10-3 23:06:02 AddReason:使用shiro安全框架 -->

	<!--Begin 这是Spring中的一个编码过滤器 设置每次请求的request请求解码的类型为UTF-8 -->
	<filter>
		<filter-name>charsetEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!--End 这是Spring中的一个编码过滤器 设置每次请求的request请求解码的类型为UTF-8 -->

	<!-- 经测试filter的执行过程是按照filter-mapping的顺序决定的 ,比如说来了一个.html的请求 -->
	<!-- 会先被SessionUserCheckUpdate拦截,之后才会被UrlRewriteFilter拦截UrlRewriteFilter被拦截到请求 -->
	<!-- 是不会传递到下一个filter的，这是UrlRewriteFilter重写URL导致的 -->
	<!--Begin Name:wuqiwei Date:2013-10-3 23:11:24 AddReason:使用shiro对后台权限控制 -->
	<filter-mapping>
		<filter-name>shiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--End Name:wuqiwei Date:2013-10-3 23:11:24 AddReason:使用shiro对后台权限控制 -->
	<filter-mapping>
		<filter-name>charsetEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!-- Begin Name:wuqiwei Date:2013-10-2 AddReason:在url重写之前缓存页面,避免Encached不缓存浏览器的链接地址 -->
	<!-- <filter-mapping> <filter-name>indexPageCacheFilter</filter-name> <url-pattern>/index.html</url-pattern> 
		</filter-mapping> -->
	<!-- End Name:wuqiwei Date:2013-10-2 AddReason:在url重写之前缓存页面,避免Encached不缓存浏览器的链接地址 -->

	<!-- begin:spring 配置 tomcat启动实例化 spring配置文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:/applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- End:spring 配置 tomcat启动实例化 spring配置文件 -->


	<!-- 配置session的过期时间为30分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<!--Begin Name:wuqiwei Date:2013-08-10 AddReason:添加springMVC的支持 -->
	<servlet>
		<servlet-name>springmvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:/applicationContext-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>*.jhtml</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>springmvc</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<!--end Name:wuqiwei Date:2013-08-10 AddReason:添加springMVC的支持 -->
	
	<!-- Begin Author:wuqiwei:Data:2014-06-05 AddReason:内嵌式小型分布式文件系统集成 -->
	 <servlet>
		<servlet-name>storageClient</servlet-name>
		<servlet-class>mydfs.storage.server.MydfsHttpClient</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>storageClient</servlet-name>
		<url-pattern>/group/M00/*</url-pattern>
	</servlet-mapping>
	<!-- End Author:wuqiwei:Data:2014-06-05 AddReason:内嵌式小型分布式文件系统集成 -->
	<error-page>
		<error-code>500</error-code>
		<exception-type>org.apache.shiro.authz.UnauthorizedException</exception-type>
		<location>/admin/common/unauthorized.jhtml</location>
	</error-page>
</web-app>